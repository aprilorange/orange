@import 'mixins'

body
  font 14px/1.4 "Helvetica Neue",Helvetica,Arial,sans-serif
  
a
  color #333
  text-decoration none

.container
  max-width 600px
  margin 0 auto
  
body,h1,h2,h3,h4,h5
  margin 0
  
.orangejuice
  background-image url('https://ooo.0o0.ooo/2015/08/28/55df3fe9e7524.png')
  width 400px
  height 300px
  background-size cover
  display inline-block
  
.s1
  background-color #FFC654
  min-height 100vmin
  position relative
  text-align center
  text-shadow 0px 1px rgba(255, 255, 255, 0.53)
  color #FF2D0A
  a
    color #FF2D0A
    text-decoration none
    border-bottom 1px dotted @color
    &:hover
      background-color #F90
  .intro
    font-size 22px
    display inline-block
    text-align left
    p
      margin 0 0 15px 0
      &:last-child
        margin-bottom 0
  .footer
    margin-top 45px
    text-align left

.section
  min-height 100vmin
  .section-box
    margin-bottom 20px
  .section-left
    float left
    width 300px
    font bold 80px/1 "Helvetica Neue",Helvetica,Arial,sans-serif
    font-style italic
    padding 45px 0
  .section-main
    padding 45px 0
    padding-left 300px
    
    
#webs
  background-color #252525
  color white
  .section-title
    a
      color white